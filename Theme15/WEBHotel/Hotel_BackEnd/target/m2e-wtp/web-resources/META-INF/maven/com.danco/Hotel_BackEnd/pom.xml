<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.danco</groupId>
    <artifactId>WEBHotel</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <groupId>com.danco</groupId>
  <artifactId>Hotel_BackEnd</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hotel_BackEnd</name>
  <url>http://maven.apache.org</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
     <groupId>com.danco</groupId>
  <artifactId>Hotel_Model</artifactId>
  <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
     <groupId>com.danco</groupId>
  <artifactId>Hotel_API</artifactId>
  <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
     <groupId>com.danco</groupId>
  <artifactId>Hotel_DI</artifactId>
  <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
     <groupId>com.danco</groupId>
  <artifactId>Hotel_Annotation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
     <groupId>com.danco</groupId>
  <artifactId>Hotel_DAO</artifactId>
  <version>0.0.1-SNAPSHOT</version>
    </dependency>
     <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
  </dependencies>
  <packaging>war</packaging>
  <build>
		<finalName>WEBHotel</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<warSourceDirectory>webapp</warSourceDirectory>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<packagingIncludes>
						**/*.htm,**/*.css,**/*.js,
						**/*.jsp,**/*.class,
						WEB-INF/lib/commons-lang*.jar
					</packagingIncludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
			</plugin>
		</plugins>
	</build>
</project>
